# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Configuration files
*.config.js text eol=lf
*.config.ts text eol=lf
*.config.json text eol=lf
.eslintrc* text eol=lf
.prettierrc* text eol=lf
tsconfig*.json text eol=lf
package.json text eol=lf
package-lock.json text eol=lf

# Shell scripts
*.sh text eol=lf

# Docker files
Dockerfile text eol=lf
*.dockerfile text eol=lf
docker-compose.yml text eol=lf
docker-compose.yaml text eol=lf
.dockerignore text eol=lf

# Git files
.gitignore text eol=lf
.gitattributes text eol=lf

# Markdown
*.md text eol=lf

# YAML
*.yml text eol=lf
*.yaml text eol=lf

# CloudFormation
*.template text eol=lf
*.cfn text eol=lf

# AWS SAM
template.yaml text eol=lf
template.yml text eol=lf
samconfig.toml text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.pdf binary
*.zip binary
*.tar.gz binary

# Executable files
*.exe binary
*.dll binary
*.so binary
*.dylib binary

# Archives
*.7z binary
*.zip binary
*.tar binary
*.gz binary
*.bz2 binary
*.xz binary

# Database
*.db binary
*.sqlite binary
*.sqlite3 binary

# Lock files (treat as binary to avoid merge conflicts)
package-lock.json text eol=lf
yarn.lock text eol=lf
pnpm-lock.yaml text eol=lf

# Line ending normalization for Windows
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Line ending normalization for Unix
*.sh text eol=lf

# Husky hooks - must use LF line endings
.husky/** text eol=lf

# Exclude node_modules from line ending normalization
node_modules/** -text

# Exclude dist from line ending normalization
dist/** -text

# Exclude build artifacts
*.map -text
*.min.js -text
*.min.css -text

